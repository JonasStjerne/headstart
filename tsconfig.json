{
  "compilerOptions": {
  "target": "es5",
  "module": "ES2015",
  "lib": ["es6"],
  "allowJs": true,
  "outDir": "build",
  "rootDir": "src",
  "strict": false,
  "esModuleInterop": true,
  "types": ["node"],
  "skipLibCheck": true,
  "moduleResolution":"node",
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "node_modules"]
}